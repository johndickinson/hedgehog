eval $(@LIBEXEC@/conf_read)

DB_NAME=$hhconfig_database_name
DATA_DIR=$hhconfig_directories_data
SQ="'"
export PGPASSWORD=$hhconfig_database_owner_pass

set -e
NEW_DDL_SERIAL=10
REQUIRED_DDL_SERIAL=$(( $NEW_DDL_SERIAL - 1 ))
NEW_API_VERSION=8
REQUIRED_API_VERSION=$(( $NEW_API_VERSION - 1 ))

DSC_SCHEMA="dsc"

usage () {
    echo
    echo "Usage: $(basename $0) options"
    echo
    echo "Supported options:"
    echo "  -h Show this help."
    exit 1
}


while getopts ":csh" opt; do
    case $opt in
        h  ) usage ;;
        \? ) usage ;;
    esac
done

echo "`date`: $0 COMMENCED"
USER=$(whoami)
[ $USER != $hhconfig_database_owner ] && echo "Must be $hhconfig_database_owner to run this script" && exit 1

DB_API_VERSION=`psql -h $hhconfig_database_host $DB_NAME -tc  "select version from dsc.version;"`
[ $DB_API_VERSION != $REQUIRED_API_VERSION ] && echo "Error: Database API version incorrect." && exit 1

LAST_SERIAL=`psql -h $hhconfig_database_host $DB_NAME -tc  "select max(serial) from dsc.internal_version;"`
[ $LAST_SERIAL != $REQUIRED_DDL_SERIAL ] && echo "Error: ddl scripts not run in correct order." && exit 1

DATASET=$(psql -qtc "SELECT id FROM dataset WHERE name = 'qtype_vs_tld';")

psql -h $hhconfig_database_host $DB_NAME <<EOF
BEGIN;
CREATE TABLE tld_types (id serial PRIMARY KEY, type_name text);
INSERT INTO tld_types (type_name) VALUES
  ('New-gTLD'),
  ('Legacy-gTLD'),
  ('ccTLD');
CREATE TABLE tlds (id serial PRIMARY KEY,
                   alabel text,
                   ulabel text,
                   english text,
                   type int REFERENCES tld_types (id));

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('qtype_vs_cctld','3.QTYPE','QTYPE for most popular ccTLDs','QTYPE for most popular ccTLDs') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET} FROM rows;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title)
    VALUES ('qtype_vs_newgtld','3.QTYPE','QTYPE for most popular New gTLDs','QTYPE for most popular New gTLDs') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET} FROM rows;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('qtype_vs_legacygtld','3.QTYPE','QTYPE for most popular Legacy gTLDs','QTYPE for most popular Legacy gTLDs') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot select id, ${DATASET} FROM rows;

UPDATE $DSC_SCHEMA.version SET version = $NEW_API_VERSION;
INSERT INTO $DSC_SCHEMA.internal_version ( serial, script, description, applied ) VALUES ( $NEW_DDL_SERIAL, '$0', 'Added new query/response difference plot for rssac', now() );
COMMIT;
EOF

echo "`date`: $0 COMPLETED"
